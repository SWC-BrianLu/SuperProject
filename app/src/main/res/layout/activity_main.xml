<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.example.lubrian.superproject.MainActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintBottom_toTopOf="@+id/et_name"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="328dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintBottom_toTopOf="@+id/tv_debutDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_debutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DebutDate:"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintBottom_toTopOf="@+id/et_debutDate"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/et_debutDate"
        android:layout_width="328dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_debutDate"
        app:layout_constraintBottom_toTopOf="@+id/tv_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        app:layout_constraintTop_toBottomOf="@+id/et_debutDate"
        app:layout_constraintBottom_toTopOf="@+id/et_type"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/et_type"
        android:layout_width="328dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        app:layout_constraintBottom_toTopOf="@+id/tv_company"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company:"
        app:layout_constraintTop_toBottomOf="@+id/et_type"
        app:layout_constraintBottom_toTopOf="@+id/et_company"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/et_company"
        android:layout_width="328dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_company"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tc_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_send"
        app:layout_constraintTop_toBottomOf="@+id/et_company"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="SEND"
        app:layout_constraintTop_toBottomOf="@+id/tc_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
